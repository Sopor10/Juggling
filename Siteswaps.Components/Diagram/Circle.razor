@using Blazor.Diagrams.Core.Geometry
@using Blazor.Diagrams.Core.Models

<circle cx="0" cy="0" r="40" stroke="black" stroke-width="2" fill="none"/>
<text text-anchor="middle">@(Node?.Name??string.Empty)</text>

@code {

    [Parameter]
    public CircleNode? Node { get; set; }


    public class CircleNode : NodeModel
    {
        public CircleNode(string name, Blazor.Diagrams.Core.Geometry.Point? position = null) : base(position)
        {
            Name = name;
        }

        public string Name { get; }
    }

}
