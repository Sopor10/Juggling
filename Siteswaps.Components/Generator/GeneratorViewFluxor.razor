@using Siteswaps.Components.Generator.State
@inherits FluxorComponent

@inject IDispatcher Dispatcher
@inject IState<SiteswapGeneratorState> State

<GeneratorView
    Values="State.Value.State"
    PeriodChanged="x => Dispatcher.Dispatch(new PeriodChangedAction(x))"
    ExactNumberChanged="x => Dispatcher.Dispatch(new ExactNumberChangedAction(x))"
    MinNumberChanged="x => Dispatcher.Dispatch(new MinNumberChangedAction(x))"
    MaxNumberChanged="x => Dispatcher.Dispatch(new MaxNumberChangedAction(x))"
    MinThrowChanged="x => Dispatcher.Dispatch(new MinThrowChangedAction(x))"
    MaxThrowChanged="x => Dispatcher.Dispatch(new MaxThrowChangedAction(x))"
    NumberOfJugglersChanged="x => Dispatcher.Dispatch(new NumberOfJugglersChangedAction(x))"
    ExactNumberOrRangeOfBallsSwitched="x => Dispatcher.Dispatch(new ExactNumberOrRangeOfBallsSwitchedAction(x))"
    Generate="() => Dispatcher.Dispatch(new GenerateSiteswapsAction(State.Value.State))">
</GeneratorView>


