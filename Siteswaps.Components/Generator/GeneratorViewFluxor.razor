    ExactNumberChanged="x => Dispatcher.Dispatch(new ExactNumberChangedAction(x))"
    MinNumberChanged="x => Dispatcher.Dispatch(new MinNumberChangedAction(x))"
    MaxNumberChanged="x => Dispatcher.Dispatch(new MaxNumberChangedAction(x))"
    MinThrowChanged="x => Dispatcher.Dispatch(new MinThrowChangedAction(x))"
    MaxThrowChanged="x => Dispatcher.Dispatch(new MaxThrowChangedAction(x))"
    NumberOfJugglersChanged="x => Dispatcher.Dispatch(new NumberOfJugglersChangedAction(x))"
    Generate="()=>Dispatcher.Dispatch(new GenerateSiteswapsAction())">
</GeneratorView2>

